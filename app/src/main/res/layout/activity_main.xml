<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    tools:ignore="ContentDescription,SpUsage">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/profilesView"
        android:name="xtr.keymapper.fragment.Profiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationZ="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_profiles" />

    <TextView
        android:id="@+id/cmdview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginVertical="20dp"
        android:gravity="bottom"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="16sp"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@id/constrained"
        app:layout_constraintLeft_toRightOf="@id/cmdview3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cmdview2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@id/cmdview3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cmdview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cmdview3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="bottom"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@id/constrained"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cmdview"
        app:layout_constraintTop_toBottomOf="@id/cmdview2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrained"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:id="@+id/L2"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/L1"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/config_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="10dp"
                android:text="@string/configure"
                app:icon="@drawable/ic_baseline_settings_24"
                app:iconSize="26dp" />

            <Button
                android:id="@+id/start_pointer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="10dp"
                android:text="@string/start_touch_pointer"
                app:icon="@drawable/ic_pointer_arrow"
                app:iconSize="24dp" />

            <Button
                android:id="@+id/about_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="10dp"
                android:text="@string/about"
                app:icon="@drawable/about"
                app:iconSize="24dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/L1"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/L2">

            <Button
                android:id="@+id/start_editor"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="10dp"
                android:text="@string/edit_keymap"
                app:icon="@drawable/ic_create_white_24dp"
                app:iconSize="24dp"
                android:drawablePadding="110dp"/>

            <Button
                android:id="@+id/start_in_terminal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="10dp"
                android:text="@string/start_server_manual"
                app:icon="@drawable/ic_terminal"
                app:iconSize="30dp" />

            <Button
                android:id="@+id/start_server"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="10dp"
                android:text="@string/start_server"
                app:icon="@drawable/ic_start_button"
                app:iconSize="30dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
